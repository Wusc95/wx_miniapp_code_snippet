.container{
  /* width:118rpx;
  height:118rpx; */
  background-color:white;
  border-radius:50%;
  box-sizing: border-box;
  position: relative;
  display:flex;
  flex-direction: row;
  box-shadow: 0 0 0 10rpx red inset;
}
.container_in{
  /* height:118rpx; */
  flex:1;
  position:relative;
  overflow:hidden;
}
.circle_left,.circle_right{
  width:100%;
  height:100%;
  /* border-radius:59rpx; */
  padding:0;
  margin:0;
  box-sizing:border-box;
  /* border:10rpx solid #ccc; */
  position:absolute;
}
.circle_left{
  /* border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border-right-color:transparent; */
  top:0;
  left:0;
  transform-origin:right center;
  transform:rotateZ(-180deg);
}
.circle_right{
  /* border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-left-color:transparent; */
  top:0;
  right:0;
  transform-origin:left center;
  transform:rotateZ(-180deg);
}
.progress_value{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size:30rpx;
  color:red;
}