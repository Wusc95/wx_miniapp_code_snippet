/** 模态 **/

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 97;
  opacity: 0.8;
  background: #181818;
}

.content {
  position: relative;
  display:flex;
  flex-direction: row;
  justify-content: center;
}

.box {
  position: relative;
  z-index: 100;
}

.close-btn {
  position: relative;
  margin-top: 15rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 10rpx;
  color: #c6c6c6;
}
